@using Microsoft.AspNetCore.Identity
@inject SignInManager<Vocentra.Models.ApplicationUser> SignInManager
@inject UserManager<Vocentra.Models.ApplicationUser> UserManager
@{
    var currentUser = SignInManager.IsSignedIn(User)
        ? await UserManager.GetUserAsync(User)
        : null;
    var displayName = currentUser != null
        ? (!string.IsNullOrEmpty(currentUser.CompanyName)
            ? currentUser.CompanyName
            : currentUser.FirstName ?? currentUser.Email)
        : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vocentra</title>

    <link rel="icon" type="image/png" href="~/favicon5.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            color: #000000;
        }

        header {
            background-color: #000000;
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 40px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        }

            header a {
                color: #ffffff;
                text-decoration: none;
                margin-left: 25px;
                font-size: 18px;
            }

                header a:hover {
                    text-decoration: underline;
                }

        .logo {
            font-size: 32px;
            font-weight: bold;
        }

        main {
            padding: 40px;
            min-height: 80vh;
        }

        footer {
            background-color: #000000;
            color: #ffffff;
            text-align: center;
            padding: 15px;
            font-size: 14px;
        }

            footer a {
                color: #ffffff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .dropdown-menu a {
            color: #000 !important;
        }

            .dropdown-menu a:hover {
                background-color: #f1f1f1;
            }

        .nav-inline-form button {
            background: none;
            border: none;
            color: #ffffff;
            cursor: pointer;
            font-size: 18px;
            padding: 0;
            margin: 0 0 0 10px;
        }

            .nav-inline-form button:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">Vocentra</a>
        </div>

        <nav class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a asp-controller="Admin" asp-action="Index">Admin Panel</a>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="dropdown" style="margin-left:25px;">
                    <a class="dropdown-toggle text-white" href="#" id="userMenu"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @displayName
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Account Settings</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Security">Security Settings</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                <button type="submit" class="btn btn-link p-0 text-decoration-none text-dark">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" style="margin-left:15px;">Login</a>
                <a asp-controller="Account" asp-action="Register" style="margin-left:10px;">Register</a>
            }
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - Vocentra -
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
