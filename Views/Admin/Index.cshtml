@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        background: #f7f7f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #111;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 3rem auto;
        padding: 1rem;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #1f2937; /* gray-900 */
    }

    .welcome-card {
        background: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 2rem;
        text-align: center;
    }

        .welcome-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #111827; /* gray-900 */
        }

        .welcome-card p {
            font-size: 1rem;
            color: #4b5563; /* gray-600 */
            line-height: 1.6;
        }

    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    @@media (min-width: 768px) {
        .dashboard-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .dashboard-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1.25rem 0;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        text-align: center;
    }

    .btn-add {
        background-color: #2563eb; /* blue-600 */
    }

        .btn-add:hover {
            background-color: #1d4ed8; /* blue-700 */
        }

    .btn-manage {
        background-color: #1f2937; /* gray-900 */
    }

        .btn-manage:hover {
            background-color: #111827; /* darker gray */
        }

    .btn-applicants {
        background-color: #4b5563; /* gray-700 */
    }

        .btn-applicants:hover {
            background-color: #374151; /* darker gray */
        }
</style>

<div class="dashboard-container">
    <h2>Admin Dashboard</h2>

    <!-- Welcome / Guidance Section -->
    <div class="welcome-card">
        <h3>Welcome back, Admin! 👋</h3>
        <p>
            Here you can manage all aspects of your job portal efficiently.
            You can add new job listings, manage existing ones, and review all applicants.
            Use the buttons below to navigate quickly to each section.
        </p>
        <p class="mt-2">
            Tip: Keep your job postings up to date and check applicant submissions regularly to stay organized.
        </p>
    </div>

    <!-- Action Buttons -->
    <div class="dashboard-grid">
        <a asp-controller="Admin" asp-action="Create" class="dashboard-btn btn-add">
            ➕ Add Job
        </a>
        <a asp-controller="Admin" asp-action="ManageJobs" class="dashboard-btn btn-manage">
            🛠 Manage Jobs
        </a>
        <a asp-controller="Admin" asp-action="Applicants" class="dashboard-btn btn-applicants">
            📬 Applicants
        </a>
    </div>
</div>
