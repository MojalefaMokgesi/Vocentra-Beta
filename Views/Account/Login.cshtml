@model Vocentra.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #f7f7f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #111;
    }

    .form-container {
        max-width: 500px;
        margin: 4rem auto;
        padding: 1rem;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #1f2937;
    }

    .welcome-card {
        background: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 2rem;
        text-align: center;
    }

        .welcome-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #111827;
        }

        .welcome-card p {
            font-size: 1rem;
            color: #4b5563;
            line-height: 1.6;
        }

    form.login-form {
        background: #fff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

        form.login-form .mb-3 {
            margin-bottom: 1.5rem;
        }

        form.login-form label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #1f2937;
        }

        form.login-form input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            font-size: 1rem;
            outline: none;
            transition: border-color 0.3s ease, box-shadow 0.2s ease;
        }

            form.login-form input:focus {
                border-color: #1f2937;
                box-shadow: 0 0 5px rgba(0,0,0,0.1);
            }

    .btn-login {
        background-color: #2563eb;
        color: #fff;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        width: 100%;
        transition: background 0.3s ease;
    }

        .btn-login:hover {
            background-color: #1d4ed8;
        }

    .extra-links {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.95rem;
        color: #4b5563;
    }

        .extra-links a {
            color: #2563eb;
            text-decoration: none;
            font-weight: 500;
        }

            .extra-links a:hover {
                color: #1d4ed8;
            }
</style>

<div class="form-container">
    <h2>Login</h2>

    <!-- Welcome / Guidance Section -->
    <div class="welcome-card">
        <h3>Welcome Back! 👋</h3>
        <p>
            Sign in to your Vocentra account to access your dashboard,
            view and apply for opportunities, and manage your profile.
        </p>
        <p class="mt-2">
            Tip: Ensure your email and password are correct. If you forgot your password, use the link below.
        </p>
    </div>

    <form asp-action="Login" method="post" class="login-form">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Email">Email *</label>
            <input asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password">Password *</label>
            <input asp-for="Password" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
        </div>

        <button type="submit" class="btn-login">Login</button>

        <div class="extra-links mt-3">
            <a asp-action="ForgotPassword">Forgot Password?</a><br />
            <span>Don't have an account? </span><a asp-action="Register">Sign Up</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
